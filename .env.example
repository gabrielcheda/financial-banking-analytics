# ============================================================================
# API Configuration
# ============================================================================

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# API Version
NEXT_PUBLIC_API_VERSION=v1

# API Timeout (ms)
NEXT_PUBLIC_API_TIMEOUT=10000

# ============================================================================
# Authentication
# ============================================================================

# JWT Secret (for backend)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT Expiration
JWT_ACCESS_TOKEN_EXPIRATION=1h
JWT_REFRESH_TOKEN_EXPIRATION=7d

# Session Secret
SESSION_SECRET=your-session-secret-key-change-in-production

# ============================================================================
# Database
# ============================================================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/banking_dashboard
DATABASE_POOL_SIZE=10

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# External Services
# ============================================================================

# Email Service (SendGrid, AWS SES, etc)
EMAIL_PROVIDER=sendgrid
EMAIL_FROM=noreply@bankdash.com
EMAIL_FROM_NAME=BankDash
SENDGRID_API_KEY=your-sendgrid-api-key

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage (AWS S3, Cloudinary, etc)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=bankdash-attachments

# Cloudinary (alternative)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================================================
# Banking Integration (Open Banking / Plaid)
# ============================================================================

# Plaid
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox # sandbox | development | production
PLAID_PRODUCTS=transactions,auth,identity
PLAID_COUNTRY_CODES=US,CA

# ============================================================================
# Payment Processing
# ============================================================================

# Stripe
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================================================
# Analytics & Monitoring
# ============================================================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# LogRocket (Session Replay)
NEXT_PUBLIC_LOGROCKET_APP_ID=your-app-id/project

# Mixpanel (Product Analytics)
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# ============================================================================
# AI & Machine Learning
# ============================================================================

# OpenAI (for AI insights)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# ============================================================================
# Security
# ============================================================================

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your-32-character-encryption-key

# ============================================================================
# Feature Flags
# ============================================================================

NEXT_PUBLIC_ENABLE_AI_INSIGHTS=false
NEXT_PUBLIC_ENABLE_BANK_SYNC=false
NEXT_PUBLIC_ENABLE_MULTI_CURRENCY=true
NEXT_PUBLIC_ENABLE_EXPORT_PDF=true
NEXT_PUBLIC_ENABLE_EXPORT_EXCEL=true

# ============================================================================
# Environment
# ============================================================================

NODE_ENV=development # development | production | test
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=BankDash

# ============================================================================
# Logging
# ============================================================================

LOG_LEVEL=debug # error | warn | info | debug
LOG_FORMAT=json # json | pretty

# ============================================================================
# Currency & Localization
# ============================================================================

DEFAULT_CURRENCY=USD
DEFAULT_LANGUAGE=en
SUPPORTED_CURRENCIES=USD,EUR,GBP,BRL
SUPPORTED_LANGUAGES=en,es,pt

# ============================================================================
# Cron Jobs & Background Tasks
# ============================================================================

# Enable background jobs
ENABLE_BACKGROUND_JOBS=true

# Bill reminder schedule (cron format)
BILL_REMINDER_CRON=0 9 * * *

# Budget alert schedule
BUDGET_ALERT_CRON=0 18 * * *

# Weekly report schedule
WEEKLY_REPORT_CRON=0 10 * * 1

# ============================================================================
# Testing
# ============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/banking_dashboard_test

# Test API Key
TEST_API_KEY=test-api-key-for-integration-tests

# ============================================================================
# Webhooks
# ============================================================================

# Webhook Secret for incoming webhooks
WEBHOOK_SECRET=your-webhook-secret-key

# Webhook Retry Configuration
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY_MS=1000

# ============================================================================
# Cache Configuration
# ============================================================================

# Cache TTL (Time To Live in seconds)
CACHE_TTL_SHORT=300      # 5 minutes
CACHE_TTL_MEDIUM=1800    # 30 minutes
CACHE_TTL_LONG=86400     # 24 hours

# ============================================================================
# File Upload Limits
# ============================================================================

MAX_FILE_SIZE=5242880    # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ============================================================================
# Session Configuration
# ============================================================================

SESSION_COOKIE_NAME=bankdash_session
SESSION_MAX_AGE=86400000 # 24 hours in ms
SESSION_SECURE=false     # Set to true in production with HTTPS

# ============================================================================
# Two-Factor Authentication
# ============================================================================

ENABLE_2FA=true
2FA_ISSUER=BankDash
2FA_WINDOW=1

# ============================================================================
# Audit Log
# ============================================================================

ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=90

# ============================================================================
# Backup Configuration
# ============================================================================

ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * * # 2 AM every day
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=bankdash-backups

# ============================================================================
# Development Only
# ============================================================================

# Enable debug mode
DEBUG=false

# Mock external services in development
MOCK_EMAIL_SERVICE=true
MOCK_SMS_SERVICE=true
MOCK_BANK_SYNC=true

# Seed database on start
SEED_DATABASE=false

# ============================================================================
# Production Security Headers
# ============================================================================

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_ONLY=false

# HSTS (HTTP Strict Transport Security)
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# ============================================================================
# Advanced Features
# ============================================================================

# Enable real-time updates (WebSocket)
ENABLE_WEBSOCKET=true
WEBSOCKET_PORT=3002

# Enable GraphQL API
ENABLE_GRAPHQL=false
GRAPHQL_PLAYGROUND=false

# Enable API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api/docs

# ============================================================================
# Notes
# ============================================================================
#
# 1. Never commit this file with real values to version control
# 2. Copy this file to .env.local and fill in your actual values
# 3. In production, use environment variables from your hosting provider
# 4. Rotate secrets regularly
# 5. Use different secrets for each environment (dev, staging, prod)
#
